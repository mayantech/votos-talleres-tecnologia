<h1>Listing temas</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temas.each do |tema| %>
      <tr>
        <% if tema['active'] || admin? %>
        <td><%= link_to tema['titulo'], tema_path(tema['id']) %></td>
        <td><%= pluralize(tema['votos'], "voto") %></td>
        <td><%= button_to '+1', upvote_tema_path(tema['id']), method: :post %></td>
        <td><%= button_to '-1', downvote_tema_path(tema['id']), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Proponer nuevo tema', new_tema_path %>
<%= link_to 'Regresar Pagina Principal', root_path %>
